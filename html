<body class="bg-stone-50 text-stone-800">

    <div class="container mx-auto p-4 sm:p-6 md:p-8">
        <header class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-blue-600">–ù–∞–≤—á–∞–ª—å–Ω–∏–π –ø–ª–∞–Ω –∑ –∞–Ω–≥–ª—ñ–π—Å—å–∫–æ—ó –º–æ–≤–∏</h1>
            <p class="mt-2 text-stone-600 max-w-2xl mx-auto">–¶–µ —ñ–Ω—Ç–µ—Ä–∞–∫—Ç–∏–≤–Ω–∏–π —ñ–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç –¥–ª—è –≤—ñ–¥—Å—Ç–µ–∂–µ–Ω–Ω—è –ø—Ä–æ–≥—Ä–µ—Å—É —É –≤–∏–≤—á–µ–Ω–Ω—ñ —Ç–µ–º –¥–ª—è 7-–≥–æ –∫–ª–∞—Å—É. –û–±–µ—Ä—ñ—Ç—å –∫–∞—Ç–µ–≥–æ—Ä—ñ—é, —â–æ–± –ø–µ—Ä–µ–≥–ª—è–Ω—É—Ç–∏ —Ç–µ–º–∏, —Ç–∞ –≤—ñ–¥–º—ñ—á–∞–π—Ç–µ —ó—Ö–Ω—ñ–π —Å—Ç–∞—Ç—É—Å, —â–æ–± –ø–æ–±–∞—á–∏—Ç–∏ —Å–≤—ñ–π –ø—Ä–æ–≥—Ä–µ—Å –Ω–∞ –¥—ñ–∞–≥—Ä–∞–º—ñ.</p>
        </header>

        <main class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <nav class="flex justify-center gap-4 mb-6">
                    <button id="lexical-nav" class="nav-button-active text-white font-semibold py-2 px-6 rounded-lg shadow-md transition-colors duration-300">
                        üìö –õ–µ–∫—Å–∏–∫–∞
                    </button>
                    <button id="grammar-nav" class="nav-button-inactive text-gray-700 font-semibold py-2 px-6 rounded-lg shadow-md transition-colors duration-300">
                        ‚úçÔ∏è –ì—Ä–∞–º–∞—Ç–∏–∫–∞
                    </button>
                </nav>
                <div id="topics-grid" class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
                </div>
            </div>

            <aside class="lg:col-span-1 bg-white p-6 rounded-xl shadow-lg">
                <h2 class="text-2xl font-bold text-center mb-4">–í–∞—à –ø—Ä–æ–≥—Ä–µ—Å</h2>
                <div class="chart-container">
                    <canvas id="progressChart"></canvas>
                </div>
                <div id="stats" class="text-center mt-4 space-y-2">
                </div>
            </aside>
        </main>
    </div>

    <div id="topic-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 hidden z-50">
        <div class="bg-white rounded-lg shadow-2xl p-6 w-full max-w-lg relative animate-fade-in">
            <button id="close-modal" class="absolute top-4 right-4 text-gray-500 hover:text-gray-800 text-2xl">&times;</button>
            <h3 id="modal-title" class="text-2xl font-bold mb-4 text-blue-600"></h3>
            <p id="modal-description" class="text-stone-600 mb-4">
                –¢—É—Ç –±—É–¥–µ –¥–µ—Ç–∞–ª—å–Ω–∏–π –æ–ø–∏—Å —Ç–µ–º–∏, –∫–ª—é—á–æ–≤—ñ –º–æ–º–µ–Ω—Ç–∏ –¥–ª—è –≤–∏–≤—á–µ–Ω–Ω—è, –ø—Ä–∏–∫–ª–∞–¥–∏ —Ç–∞ –∫–æ—Ä–∏—Å–Ω—ñ –ø–æ—Ä–∞–¥–∏. –¶–µ–π —Ä–æ–∑–¥—ñ–ª –¥–æ–ø–æ–º–æ–∂–µ –∫—Ä–∞—â–µ –∑—Ä–æ–∑—É–º—ñ—Ç–∏, –Ω–∞ —â–æ –∑–≤–µ—Ä–Ω—É—Ç–∏ —É–≤–∞–≥—É –ø—ñ–¥ —á–∞—Å –æ–ø—Ä–∞—Ü—é–≤–∞–Ω–Ω—è –º–∞—Ç–µ—Ä—ñ–∞–ª—É.
            </p>
             <div class="mt-6">
                <h4 class="font-semibold mb-2">–ü—Ä–∏–∫–ª–∞–¥–∏ —Ä–µ—á–µ–Ω—å:</h4>
                <ul id="modal-examples" class="list-disc list-inside text-stone-600 space-y-1">
                    <li>–ü—Ä–∏–∫–ª–∞–¥ —Ä–µ—á–µ–Ω–Ω—è 1.</li>
                    <li>–ü—Ä–∏–∫–ª–∞–¥ —Ä–µ—á–µ–Ω–Ω—è 2.</li>
                </ul>
            </div>
        </div>
    </div>


    <script>
        const data = {
            lexical: [
                { id: 'l1', title: '–ó–Ω–∞–π–æ–º—Å—Ç–≤–æ —Ç–∞ —Å—ñ–º\'—è', status: 'todo' },
                { id: 'l2', title: '–®–∫–æ–ª–∞ —Ç–∞ —à–∫—ñ–ª—å–Ω–µ –∂–∏—Ç—Ç—è', status: 'todo' },
                { id: 'l3', title: '–•–æ–±—ñ —Ç–∞ –¥–æ–∑–≤—ñ–ª–ª—è', status: 'todo' },
                { id: 'l4', title: '–á–∂–∞ —Ç–∞ –Ω–∞–ø–æ—ó', status: 'todo' },
                { id: 'l5', title: '–ú—ñ—Å—Ç–æ —Ç–∞ –≤–∏–∑–Ω–∞—á–Ω—ñ –º—ñ—Å—Ü—è', status: 'todo' },
                { id: 'l6', title: '–ó–æ–≤–Ω—ñ—à–Ω—ñ—Å—Ç—å —Ç–∞ —Ö–∞—Ä–∞–∫—Ç–µ—Ä', status: 'todo' },
                { id: 'l7', title: '–ü–æ—Ä–∏ —Ä–æ–∫—É —Ç–∞ –ø–æ–≥–æ–¥–∞', status: 'todo' },
                { id: 'l8', title: '–†—É—Ç–∏–Ω–Ω—ñ —Å–ø—Ä–∞–≤–∏', status: 'todo' },
            ],
            grammar: [
                { id: 'g1', title: '–î—ñ—î—Å–ª–æ–≤–æ to be', status: 'todo' },
                { id: 'g2', title: 'Present Simple', status: 'todo' },
                { id: 'g3', title: 'Present Continuous', status: 'todo' },
                { id: 'g4', title: 'Past Simple', status: 'todo' },
                { id: 'g5', title: '–ú–Ω–æ–∂–∏–Ω–∞ —ñ–º–µ–Ω–Ω–∏–∫—ñ–≤', status: 'todo' },
                { id: 'g6', title: '–ê—Ä—Ç–∏–∫–ª—ñ a/an, the', status: 'todo' },
                { id: 'g7', title: '–ü—Ä–∏–π–º–µ–Ω–Ω–∏–∫–∏ –º—ñ—Å—Ü—è —Ç–∞ —á–∞—Å—É', status: 'todo' },
                { id: 'g8', title: '–ú–æ–¥–∞–ª—å–Ω—ñ –¥—ñ—î—Å–ª–æ–≤–∞ can/must', status: 'todo' },
                { id: 'g9', title: '–°—Ç—É–ø–µ–Ω—ñ –ø–æ—Ä—ñ–≤–Ω—è–Ω–Ω—è –ø—Ä–∏–∫–º–µ—Ç–Ω–∏–∫—ñ–≤', status: 'todo' },
            ]
        };

        let currentCategory = 'lexical';
        let progressChart;

        const topicsGrid = document.getElementById('topics-grid');
        const lexicalNav = document.getElementById('lexical-nav');
        const grammarNav = document.getElementById('grammar-nav');
        const statsDiv = document.getElementById('stats');
        
        const modal = document.getElementById('topic-modal');
        const closeModalBtn = document.getElementById('close-modal');
        const modalTitle = document.getElementById('modal-title');

        const statusConfig = {
            todo: { text: '–ü–æ—á–∞—Ç–∏', color: 'bg-gray-200', textColor: 'text-gray-700', next: 'doing' },
            doing: { text: '–í –ø—Ä–æ—Ü–µ—Å—ñ', color: 'bg-yellow-400', textColor: 'text-white', next: 'done' },
            done: { text: '–í–∏–≤—á–µ–Ω–æ', color: 'bg-green-500', textColor: 'text-white', next: 'todo' }
        };

        function renderCards() {
            topicsGrid.innerHTML = '';
            const topics = data[currentCategory];
            topics.forEach(topic => {
                const card = document.createElement('div');
                card.className = 'bg-white p-4 rounded-lg shadow-md flex flex-col justify-between cursor-pointer transition-transform hover:scale-105';
                card.addEventListener('click', (e) => {
                    if (!e.target.classList.contains('status-btn')) {
                        openModal(topic);
                    }
                });

                const status = statusConfig[topic.status];

                card.innerHTML = `
                    <h3 class="font-semibold text-lg mb-4 text-stone-800">${topic.title}</h3>
                    <button 
                        data-id="${topic.id}" 
                        class="status-btn w-full mt-auto py-2 px-4 rounded-md font-semibold ${status.color} ${status.textColor}">
                        ${status.text}
                    </button>
                `;
                topicsGrid.appendChild(card);
            });
        }

        function updateProgress() {
            const allTopics = [...data.lexical, ...data.grammar];
            const counts = {
                done: allTopics.filter(t => t.status === 'done').length,
                doing: allTopics.filter(t => t.status === 'doing').length,
                todo: allTopics.filter(t => t.status === 'todo').length,
            };
            const total = allTopics.length;

            progressChart.data.datasets[0].data = [counts.done, counts.doing, counts.todo];
            progressChart.update();
            
            statsDiv.innerHTML = `
                <p><span class="font-bold text-green-600">${counts.done}</span> –∑ ${total} —Ç–µ–º –≤–∏–≤—á–µ–Ω–æ</p>
                <p><span class="font-bold text-yellow-500">${counts.doing}</span> —Ç–µ–º –≤ –ø—Ä–æ—Ü–µ—Å—ñ</p>
                <p><span class="font-bold text-gray-500">${counts.todo}</span> —Ç–µ–º –æ—á—ñ–∫—É—î</p>
            `;
        }

        function handleNavClick(category) {
            currentCategory = category;
            lexicalNav.classList.toggle('nav-button-active', category === 'lexical');
            lexicalNav.classList.toggle('nav-button-inactive', category !== 'lexical');
            grammarNav.classList.toggle('nav-button-active', category === 'grammar');
            grammarNav.classList.toggle('nav-button-inactive', category !== 'grammar');
            renderCards();
        }
        
        function openModal(topic) {
            modalTitle.textContent = topic.title;
            modal.classList.remove('hidden');
        }

        function closeModal() {
            modal.classList.add('hidden');
        }

        function initChart() {
            const ctx = document.getElementById('progressChart').getContext('2d');
            progressChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['–í–∏–≤—á–µ–Ω–æ', '–í –ø—Ä–æ—Ü–µ—Å—ñ', '–û—á—ñ–∫—É—î'],
                    datasets: [{
                        data: [0, 0, data.lexical.length + data.grammar.length],
                        backgroundColor: [
                            '#22c55e',
                            '#f59e0b',
                            '#e5e7eb'
                        ],
                        borderColor: '#ffffff',
                        borderWidth: 4,
                        hoverOffset: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += context.parsed;
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }

        lexicalNav.addEventListener('click', () => handleNavClick('lexical'));
        grammarNav.addEventListener('click', () => handleNavClick('grammar'));
        
        closeModalBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });

        topicsGrid.addEventListener('click', (e) => {
            if (e.target.matches('.status-btn')) {
                const topicId = e.target.dataset.id;
                const topics = data[currentCategory];
                const topic = topics.find(t => t.id === topicId);
                if (topic) {
                    topic.status = statusConfig[topic.status].next;
                    renderCards();
                    updateProgress();
                }
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            initChart();
            handleNavClick('lexical');
            updateProgress();
        });
    </script>
</body>
</html>
