    <script>
        // JS for interactive progress tracking
        document.addEventListener('DOMContentLoaded', () => {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            const totalLessons = checkboxes.length;
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            const STORAGE_KEY = 'lesson-progress';

            // Function to update the progress bar and text
            function updateProgress() {
                const completedLessons = Array.from(checkboxes).filter(cb => cb.checked).length;
                const percentage = (completedLessons / totalLessons) * 100;
                
                progressBar.style.width = `${percentage}%`;
                progressText.textContent = `${Math.round(percentage)}% завершено (${completedLessons}/${totalLessons})`;
            }

            // Function to save the state to local storage
            function saveProgress() {
                const completedState = Array.from(checkboxes).reduce((acc, cb) => {
                    acc[cb.dataset.lessonId] = cb.checked;
                    return acc;
                }, {});
                localStorage.setItem(STORAGE_KEY, JSON.stringify(completedState));
            }

            // Function to load the state from local storage
            function loadProgress() {
                const savedState = JSON.parse(localStorage.getItem(STORAGE_KEY));
                if (savedState) {
                    checkboxes.forEach(cb => {
                        const lessonId = cb.dataset.lessonId;
                        if (savedState[lessonId]) {
                            cb.checked = true;
                        }
                    });
                }
                updateProgress();
            }

            // Add event listeners to each checkbox
            checkboxes.forEach(cb => {
                cb.addEventListener('change', () => {
                    updateProgress();
                    saveProgress();
                });
            });

            // Initial load of progress
            loadProgress();
        });
    </script>
</body>
</html>
